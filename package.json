  "main": "./build/index.js",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "build": "if exist build (rmdir /s/q build) && yarn run eslint && yarn run prettier -c src && tsc --build",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
